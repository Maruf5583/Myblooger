@model Post

@{
    ViewData["Title"] = "Add New Post";
}

<div class="card shadow-sm p-4" style="border-radius: 10px;">
    <h2 class="mb-4">Add New Post</h2>

    <form asp-action="Create" method="post" enctype="multipart/form-data">

        <!-- Title -->
        <div class="mb-3">
            <label asp-for="Title" class="form-label"></label>
            <input asp-for="Title" class="form-control" />
        </div>

        <!-- Slug -->
        <div class="mb-3">
            <label asp-for="Slug" class="form-label"></label>
            <input asp-for="Slug" class="form-control" />
        </div>

        <!-- Content -->
        <div class="mb-3">
            <label asp-for="Content" class="form-label"></label>
            <textarea asp-for="Content" rows="4" class="form-control" placeholder="Write your blog here..."></textarea>
        </div>

        <!-- Status -->
        <div class="mb-3">
            <label asp-for="Status" class="form-label"></label>
            <select asp-for="Status" class="form-control">
                <option value="">Choose...</option>
                <option value="Default">Default</option>
                <option value="Draft">Draft</option>
                <option value="Published">Published</option>
            </select>
        </div>

        <!-- Media -->
        <div class="mb-3">
            <label asp-for="Media" class="form-label"></label>
            <input asp-for="Media" type="file" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>

    </form>
</div>
